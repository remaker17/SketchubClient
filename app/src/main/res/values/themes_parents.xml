<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sketchub.Base.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>
        <item name="searchBarBackgroundColor">@android:color/white</item>
        <item name="actionModeWebSearchDrawable">@drawable/abc_ic_search_api_material</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.Sketchub.Base.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>
        <item name="searchBarBackgroundColor">?attr/colorSurfaceContainerHigh</item>
        <item name="actionModeWebSearchDrawable">@drawable/abc_ic_search_api_material</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.Sketchub.Base.Black" parent="Theme.Sketchub.Base.Dark">
        <item name="colorSurface">@color/black_color</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

</resources>